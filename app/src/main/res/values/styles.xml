<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_screen</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:fontFamily">@font/poppins_regular</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="CustomMenuItemText" parent="android:TextAppearance">
        <item name="android:textColor">#004274</item>
        <!-- Add other desired text style attributes if needed -->
    </style>
        <style name="CustomEditTextHintColor" parent="Widget.AppCompat.EditText">
            <item name="android:textColorHint">@color/black</item>
        </style>
    <style name="CustomEditTextHintColorBlue" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">#014273</item>
    </style>

    <style name="CustomEditTextHintColorSupport" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">#80000000</item>
    </style>

    <style name="CustomEditTextHintColorReview" parent="Widget.AppCompat.EditText">
        <item name="android:textColorHint">#0142734D</item>
    </style>
</resources>

