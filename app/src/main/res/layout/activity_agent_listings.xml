<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="30dp"
    tools:context=".AgentListings">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal" >

    <TextView
        android:id="@+id/listings"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Listings"
        android:textColor="@color/figmablue"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/see_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="25dp"
        android:layout_marginTop="24dp"
        app:layout_constraintBaseline_toBaselineOf="@+id/listings"
        android:fontFamily="@font/poppins_regular"
        android:text="See all"
        android:clickable="true"
        android:focusable="true"
        android:textAllCaps="false"
        android:textColor="#336890"
        android:background="#00000000"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/featured2"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/listings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/border_background">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="190dp"
            android:background="@drawable/image_background">

            <com.acme.propdub.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/imageagentdetails" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/favicon"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="15dp"/>

        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="211dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Royal Bay"
            android:layout_marginLeft="20dp"
            android:textColor="#0A2753" />
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="211dp"
            android:layout_marginLeft="243dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ratingicon"/>

            <TextView
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="4.5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="244dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:src="@drawable/pinicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="Dubai Hills Park"
                android:textColor="#6A778B"
                android:textSize="12sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/agent_details"
            android:layout_width="310dp"
            android:gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:layout_marginTop="271dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_line11">

            <ImageView
                android:id="@+id/agent_pic"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/agent_pic" />

            <LinearLayout
                android:id="@+id/linear_layout2111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/agent_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:text="John Doe"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:id="@+id/contact_agent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:text="contact"
                    android:textColor="@color/figmablue"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/icons"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/icon1111"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/message" />

                <ImageView
                    android:id="@+id/icon111111"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18.2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/videochat" />

                <ImageView
                    android:id="@+id/icon111111111"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18.2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/call1" />

            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/featured3"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/featured2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/border_background">

        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="190dp"
            android:background="@drawable/image_background">

            <com.acme.propdub.RoundedImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/imageagentdetails" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:src="@drawable/favicon"
                android:layout_marginEnd="6dp"
                android:layout_marginTop="6dp"/>
        </FrameLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="21dp"
            android:layout_marginTop="211dp"
            android:fontFamily="@font/poppins_regular"
            android:text="Royal Bay"
            android:layout_marginLeft="20dp"
            android:textColor="#0A2753" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="211dp"
            android:layout_marginLeft="243dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ratingicon"/>

            <TextView
                android:id="@+id/rating1"
                android:layout_marginLeft="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="244dp"
            android:layout_marginLeft="20dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:src="@drawable/pinicon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/poppins_light"
                android:text="Dubai Hills Park"
                android:textColor="#6A778B"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/agent_details1"
            android:layout_width="305dp"
            android:gravity="center_vertical"
            android:paddingBottom="8dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="271dp"
            android:orientation="horizontal"
            android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_line11">

            <ImageView
                android:id="@+id/agent_pic1"
                android:clickable="true"
                android:focusable="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/agent_pic" />

            <LinearLayout
                android:id="@+id/linear_layout21111"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_gravity="center">

                <TextView
                    android:id="@+id/agent_name1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="0dp"
                    android:text="John Doe"
                    android:textColor="@color/black"
                    android:textSize="17sp"
                    android:fontFamily="@font/poppins_regular"/>

                <TextView
                    android:id="@+id/contact_agent1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:focusable="true"
                    android:layout_marginLeft="10dp"
                    android:textSize="12sp"
                    android:text="contact"
                    android:textColor="@color/figmablue"
                    android:fontFamily="@font/poppins_regular"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/icons1"
                android:layout_width="wrap_content"
                android:gravity="center_vertical"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="30dp">

                <ImageView
                    android:id="@+id/icon11111"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/message" />

                <ImageView
                    android:id="@+id/icon1111111"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18.2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/videochat" />

                <ImageView
                    android:id="@+id/icon11111111"
                    android:layout_width="wrap_content"
                    android:layout_height="55dp"
                    android:layout_marginLeft="18.2dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/call1" />

            </LinearLayout>
        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>