<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PropertyDetails">

    <ImageView
        android:id="@+id/background_image3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_about_us" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/property_details_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Property Details"
            android:textSize="20sp"

            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="28dp"
            android:textColor="@android:color/white" />
        <!-- android:fontFamily="@font/poppins-semibold" -->

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/viewPager1"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/property_details_text" />

        <TextView
            android:id="@+id/titleofproperty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PEARLZ"
            android:textSize="32sp"
            android:textColor="@android:color/white"

            app:layout_constraintTop_toBottomOf="@id/viewPager1"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="30dp" />
        <!--android:fontFamily="@font/poppins-bold" -->
        
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/propertyDetails"
            android:text="PEARLZ by Danube properties, located in Al Furjan, brings a new change in residential living in the Al Furjan community. The building has been aesthetically designed in a Modern style to seamlessly and beautifully blend with the surroundings. The plot is located within walking distance of the Al Furjan Metro Station. The ground floor consists of Entrance Lobbies for the Residents, Retail stores, "
            app:layout_constraintTop_toBottomOf="@+id/titleofproperty"
            android:layout_marginTop="8dp"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="26dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="26dp"
            />

        <View
            android:id="@+id/horizontal_line"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/propertyDetails"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="30dp" />


        <Button
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_line"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/schedule_viewing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule viewing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/location_on_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location on map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schedule_viewing"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location_on_map"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/documents_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents viewer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/mortgage_calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mortgage calculator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/documents_viewer"
            android:layout_marginTop="16dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
