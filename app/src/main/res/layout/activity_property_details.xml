<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".PropertyDetails"
    tools:openDrawer="start">

        <ImageView
            android:id="@+id/background_image3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_about_us" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <View
                android:id="@+id/blue_tint"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#33004274" />
        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">



                <TextView
                    android:id="@+id/property_details_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="16dp"
                    android:text="Property Details"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <!-- android:fontFamily="@font/poppins-semibold" -->

                <androidx.appcompat.widget.AppCompatImageView

                    android:id="@+id/back_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/back_button"
                    android:layout_marginTop="1.71dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toTopOf="@id/viewPager1"
                    app:layout_constraintEnd_toStartOf="@id/property_details_text"
                    />

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/viewPager1"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@+id/property_details_text" />

                <TextView
                    android:id="@+id/titleofproperty"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="26dp"
                    android:text="PEARLZ"
                    android:textColor="@android:color/white"
                    android:textSize="32sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/viewPager1" />
                <!--android:fontFamily="@font/poppins-bold" -->

                <TextView
                    android:id="@+id/propertyDetails"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginRight="26dp"
                    android:text="PEARLZ by Danube properties, located in Al Furjan, brings a new change in residential living in the Al Furjan community. The building has been aesthetically designed in a Modern style to seamlessly and beautifully blend with the surroundings. The plot is located within walking distance of the Al Furjan Metro Station. The ground floor consists of Entrance Lobbies for the Residents, Retail stores, "
                    android:textColor="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/titleofproperty" />

                <View
                    android:id="@+id/horizontal_line"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/propertyDetails" />

                <LinearLayout
                    android:id="@+id/icon_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontal_line">

                    <ImageView
                        android:id="@+id/icon1"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/bedrooms" />

                    <ImageView
                        android:id="@+id/icon2"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/bathrooms" />

                    <ImageView
                        android:id="@+id/icon3"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/parking" />

                    <ImageView
                        android:id="@+id/icon4"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_weight="1"
                        android:scaleType="centerInside"
                        android:src="@drawable/gym" />
                </LinearLayout>

                <View
                    android:id="@+id/horizontal_line1"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="16dp"
                    android:background="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icon_container" />

                <TextView
                    android:id="@+id/documents"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="16dp"
                    android:text="Property Documents"
                    android:textColor="@android:color/white"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/horizontal_line1" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraint_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    app:layout_constraintEnd_toEndOf="@id/scroll_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/documents">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/right_guideline"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_end="55dp" />

                    <ImageView
                        android:id="@+id/image_before_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="39dp"
                        android:src="@drawable/pdficon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/propdocs"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="3dp"
                        android:text="Danube Peralz Updated"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                        app:layout_constraintStart_toEndOf="@+id/image_before_text"
                        app:layout_constraintTop_toTopOf="@+id/image_before_text" />

                    <ImageButton
                        android:id="@+id/button_after_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:src="@drawable/downloadbutton"
                        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/pdficon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="39dp"
                        android:layout_marginTop="12dp"
                        android:src="@drawable/pdficon"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/image_before_text" />

                    <TextView
                        android:id="@+id/propdocs1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="2.4dp"
                        android:text="Danube Peralz floor plan"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/right_guideline"
                        app:layout_constraintStart_toEndOf="@+id/pdficon"
                        app:layout_constraintTop_toTopOf="@+id/pdficon" />

                    <ImageButton
                        android:id="@+id/downloadbutton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:background="@android:color/transparent"
                        android:src="@drawable/downloadbutton"
                        app:layout_constraintEnd_toEndOf="@+id/right_guideline"
                        app:layout_constraintTop_toBottomOf="@+id/button_after_text" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/horizontal_line2"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/constraint_layout" />

                <TextView
                    android:id="@+id/address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="16dp"
                    android:text="Address"
                    android:textColor="@android:color/white"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/horizontal_line2" />

                <LinearLayout
                    android:id="@+id/linear_layout21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical"
                    app:layout_constraintEnd_toEndOf="@id/scroll_view"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/address">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/linear_layout211"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="@id/scroll_view"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/address">

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineLeft"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_begin="25dp" />

                        <androidx.constraintlayout.widget.Guideline
                            android:id="@+id/guidelineRight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            app:layout_constraintGuide_end="79dp" />

                        <TextView
                            android:id="@+id/address_label1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="  •   Address"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/address_value1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Al Furjan"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@+id/guidelineRight"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/city_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="  •   City"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                            app:layout_constraintTop_toBottomOf="@+id/address_value1" />

                        <TextView
                            android:id="@+id/city_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Dubai"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@+id/guidelineRight"
                            app:layout_constraintTop_toBottomOf="@+id/address_value1" />

                        <TextView
                            android:id="@+id/area_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="  •   Area"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                            app:layout_constraintTop_toBottomOf="@+id/city_value" />

                        <TextView
                            android:id="@+id/area_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="Al Furjan"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@+id/guidelineRight"
                            app:layout_constraintTop_toBottomOf="@+id/city_value" />

                        <TextView
                            android:id="@+id/country_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="  •   Country"
                            android:textColor="@android:color/white"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="@+id/guidelineLeft"
                            app:layout_constraintTop_toBottomOf="@+id/area_value" />

                        <TextView
                            android:id="@+id/country_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20dp"
                            android:text="UAE"
                            android:textColor="@android:color/white"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="@+id/guidelineRight"
                            app:layout_constraintTop_toBottomOf="@+id/area_value" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/map_view_card"
                            android:layout_width="314dp"
                            android:layout_height="200dp"
                            android:layout_marginTop="18dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="0dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/country_value">

                            <com.google.android.gms.maps.MapView
                                android:id="@+id/map_view"
                                android:elevation="4dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </androidx.cardview.widget.CardView>

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>

                <View
                    android:id="@+id/horizontal_line3"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/linear_layout21" />

                <TextView
                    android:id="@+id/Video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="16dp"
                    android:text="Video"
                    android:textColor="@android:color/white"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/horizontal_line3" />

                <WebView
                    android:id="@+id/youtube_video"
                    android:layout_width="wrap_content"
                    android:layout_height="200dp"
                    android:elevation="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Video" />

                <View
                    android:id="@+id/horizontal_line4"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="18dp"
                    android:background="@android:color/transparent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/youtube_video" />

                <TextView
                    android:id="@+id/dealer_details"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="16dp"
                    android:text="Dealer Details"
                    android:textColor="@android:color/white"
                    android:textSize="21sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/horizontal_line4" />

                <ImageView
                    android:id="@+id/dealer_image"
                    android:layout_width="308dp"
                    android:layout_height="139dp"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/rounded_image"
                    android:clipToOutline="true"
                    android:scaleType="centerCrop"
                    android:elevation="4dp"

                    android:src="@drawable/bg_about_us"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dealer_details" />

                <TextView
                    android:id="@+id/dealer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="30dp"
                    android:text="Azizi Properties"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dealer_image" />

                <ImageView
                    android:id="@+id/dealer_icon"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/profile"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dealer_image" />

                <TextView
                    android:id="@+id/dealer_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="20dp"
                    android:text="+971 542660997"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dealer_name" />

                <ImageView
                    android:id="@+id/call_icon"
                    android:layout_width="0dp"
                    android:layout_height="24dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="20dp"
                    android:layout_weight="1"
                    android:scaleType="centerInside"
                    android:src="@drawable/call"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/dealer_name" />

                <Button
                    android:id="@+id/view_listings"
                    android:layout_width="118dp"
                    android:layout_height="37dp"
                    android:layout_marginLeft="216dp"
                    android:layout_marginTop="43dp"
                    android:layout_marginRight="26dp"
                    android:elevation="4dp"
                    android:background="@drawable/rounded_button"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="View Listings"
                    android:textColor="@android:color/white"
                    android:textSize="12sp"
                    app:backgroundTint="@color/button_color"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dealer_image" />

                <View
                    android:id="@+id/horizontal_line5"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="20dp"
                    android:background="@android:color/white"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="1.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dealer_number" />

                <Button
                    android:id="@+id/schedule_tour"
                    android:layout_width="308dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="26dp"
                    android:background="@drawable/rounded_button"
                    android:paddingLeft="0dp"
                    android:elevation="4dp"
                    android:paddingRight="0dp"
                    android:text="Submit a tour request"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:backgroundTint="#77C720"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/horizontal_line5" />

                <Button
                    android:id="@+id/mortgage_calculator1"
                    android:layout_width="308dp"
                    android:layout_height="43dp"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginBottom="26dp"
                    android:elevation="4dp"
                    android:background="@drawable/rounded_button"
                    android:paddingLeft="0dp"
                    android:paddingRight="0dp"
                    android:text="Calculate mortgage"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:backgroundTint="#77C720"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/schedule_tour" />

                <Button
                    android:id="@+id/contact"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="90dp"
                    android:text="Contact"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/mortgage_calculator1" />

                <Button
                    android:id="@+id/schedule_viewing"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Schedule viewing"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/contact" />

                <Button
                    android:id="@+id/location_on_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Location on map"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/schedule_viewing" />

                <Button
                    android:id="@+id/video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Video"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/location_on_map" />

                <Button
                    android:id="@+id/documents_viewer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Documents viewer"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/video" />

                <Button
                    android:id="@+id/mortgage_calculator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Mortgage calculator"
                    android:visibility="gone"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/documents_viewer" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

