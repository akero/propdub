        </LinearLayout>

        <View
            android:id="@+id/horizontal_line3"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/linear_layout21"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Video"
            app:layout_constraintTop_toBottomOf="@id/horizontal_line3"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Video"
            android:textSize="21sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="16dp"/>

        <WebView
            android:id="@+id/youtube_video"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            app:layout_constraintTop_toBottomOf="@+id/Video"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>

        <View
            android:id="@+id/horizontal_line4"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:background="@android:color/white"
            app:layout_constraintTop_toBottomOf="@+id/youtube_video"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="18dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealer_details"
            app:layout_constraintTop_toBottomOf="@id/horizontal_line4"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Dealer Details"
            android:textSize="21sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="16dp"/>

        <ImageView
            android:id="@+id/dealer_image"
            android:layout_width="20dp"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@+id/dealer_details"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_height="20dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_about_us" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealer_name"
            app:layout_constraintTop_toBottomOf="@id/dealer_image"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Azizi Properties"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"/>


        <ImageView
            android:id="@+id/dealer_icon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="26dp"
            app:layout_constraintTop_toBottomOf="@id/dealer_image"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerInside"
            android:src="@drawable/profile" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dealer_number"
            app:layout_constraintTop_toBottomOf="@id/dealer_name"
            app:layout_constraintStart_toStartOf="parent"
            android:text="+971 542660997"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="30dp"/>

        <ImageView
            android:id="@+id/call_icon"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:layout_weight="1"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="26dp"
            app:layout_constraintTop_toBottomOf="@id/dealer_name"
            app:layout_constraintStart_toStartOf="parent"
            android:scaleType="centerInside"
            android:src="@drawable/call" />

        <Button
            android:id="@+id/view_listings"
            android:layout_width="118dp"
            android:layout_height="37dp"
            android:textColor="@android:color/white"
            android:background="@drawable/rounded_button"
            android:textSize="12sp"
            android:text="View Listings"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dealer_image"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="216dp"/>

        <View
            android:id="@+id/horizontal_line5"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dealer_number" />




        <Button
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact"

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/horizontal_line5"
            android:layout_marginTop="90dp"/>

        <Button
            android:id="@+id/schedule_viewing"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule viewing"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contact"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/location_on_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location on map"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/schedule_viewing"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/video"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/location_on_map"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/documents_viewer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Documents viewer"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/video"
            android:layout_marginTop="16dp"/>

        <Button
            android:id="@+id/mortgage_calculator"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mortgage calculator"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/documents_viewer"
