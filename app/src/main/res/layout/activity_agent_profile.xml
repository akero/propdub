<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AgentProfile">

    <TextView
        android:id="@+id/agent_details_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="16dp"
        android:text="Agent details"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/agent_details"
        android:layout_width="0dp"
        android:gravity="center_vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="22dp"
        android:layout_marginEnd="22dp"
        app:layout_constraintTop_toBottomOf="@+id/agent_details_text">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/agent_pic" />
        <LinearLayout
            android:id="@+id/linear_layout2111"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"

            android:layout_weight="1"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/agent_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="0dp"
                android:text="John Doe"
                android:textColor="@color/black"
                android:textSize="17sp"
                android:fontFamily="@font/poppins_regular"
                />
            <TextView
                android:id="@+id/contact_agent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:text="contact"
                android:textColor="@color/figmablue"
                android:fontFamily="@font/poppins_regular"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/icons"
            android:layout_width="wrap_content"
            android:gravity="center_vertical"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            >
            <ImageView
                android:id="@+id/icon1111"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:scaleType="centerInside"
                android:src="@drawable/message" />
            <ImageView
                android:id="@+id/icon111111"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="18.2dp"
                android:scaleType="centerInside"
                android:src="@drawable/videochat" />
            <ImageView
                android:id="@+id/icon1111111"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginLeft="18.2dp"
                android:scaleType="centerInside"
                android:src="@drawable/call1" />


        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="25dp"
        app:layout_constraintTop_toBottomOf="@id/agent_details"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Company Name"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/figmablue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/figmablue"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text=":XYZ Pvt. ltd."/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/figmablue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/figmablue"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text=":XYZ@gmail.com"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Website"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/figmablue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/figmablue"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text=":probdub.com"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Response time"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/figmablue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/figmablue"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text=":Less than 5 minutes"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/figmablue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/figmablue"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text=": 5 years"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Languages"
                android:layout_weight="1"
                android:fontFamily="@font/poppins_regular"
                android:textSize="14sp"
                android:textColor="@color/figmablue"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/figmablue"
                android:fontFamily="@font/poppins_light"
                android:textSize="14sp"
                android:layout_weight="1"
                android:text=":English, Hindi"/>
        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/overview"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Description"
        android:textColor="@color/figmablue"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/details" />

    <TextView
        android:id="@+id/agentDetails2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="26dp"
        android:text="You Will Have Everything Nearby:SupermarketBuses, Stations, Cinemas, Theaters, The Carmen Neighborhood, Etc. You Will Have Everything Nearby: Supermarket Buses, Stations, Cinemas, Theaters, The Carmen Neighborhood."
        android:textColor="@color/color1"
        android:fontFamily="@font/poppins_regular"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/overview" />

    <TextView
        android:id="@+id/listings"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginLeft="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Listings"
        android:textColor="@color/figmablue"
        android:textSize="21sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agentDetails2" />

    <TextView
        android:id="@+id/see_all"
        android:layout_width="wrap_content"
        android:layout_height="37dp"
        android:layout_marginEnd="26dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/poppins_regular"
        android:text="See all"
        android:textColor="@color/figmablue"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/agentDetails2" />

    <Button
        android:id="@+id/property_listed_by_agent_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Listings"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>